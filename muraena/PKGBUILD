#
# system-linux.com rebuild alpha - djustice@system-linux.com
#

pkgname=muraena
pkgver=223.3cf02b5
pkgrel=1
pkgdesc='Almost-transparent reverse proxy to automate phishing and post-phishing activities.'
arch=('x86_64')
groups=('system' 'system-social' 'system-proxy')
url='https://github.com/muraenateam/muraena'
license=('BSD')
makedepends=('git' 'go')
source=("git+https://github.com/muraenateam/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
  cd $pkgname

  GOPATH="$srcdir" go mod download
  GOPATH="$srcdir" go build \
    -trimpath \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-s -w" \
    -o $pkgname .
}

package() {
  cd $pkgname

  install -dm 755 "$pkgdir/usr/share/$pkgname"

  install -Dm 755 $pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  cp -a config "$pkgdir/usr/share/$pkgname/config"
}

